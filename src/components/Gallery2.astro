---
const {img1, img2, img3} = Astro.props;

---
<div class="slideshow-wrapper">
  <!-- Slideshow container -->
  <div class="slideshow-container gallery2">
      <!-- Full-width images -->
      <div class="mySlidesGallery2 fade">
        <div class="numbertext">1 / 3</div>
        <img src={img1}>
      </div>
    
      <div class="mySlidesGallery2 fade">
        <div class="numbertext">2 / 3</div>
        <img src={img2}>
      </div>
    
      <div class="mySlidesGallery2 fade">
        <div class="numbertext">3 / 3</div>
        <img src={img3}>
      </div>
    
      <!-- Next and previous buttons -->
      <a class="sidste" onclick="plusSlidesGallery2(-1)">&#10094;</a>
      <a class="neste" onclick="plusSlidesGallery2(1)">&#10095;</a>
  </div>

  <!-- The dots/circles -->
  <div class="dots-container">
    <span class="dotGallery2" onclick="currentSlideGallery2(1)"></span>
    <span class="dotGallery2" onclick="currentSlideGallery2(2)"></span>
    <span class="dotGallery2" onclick="currentSlideGallery2(3)"></span>
  </div>
</div>

  <style>
    * {box-sizing:border-box}

    .slideshow-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
/* Slideshow container */
.slideshow-container {
  position: relative;
  width: 80%;
  max-width: 1000px;
  aspect-ratio: 16 / 9;
  overflow: hidden;
  display: block; /* Ensures correct positioning */
  margin: auto;
}


.mySlidesGallery2 img {
  width: 100%;
  height: 100%;
  object-fit: contain; /* Ensures images fit inside the container */
}

/* Hide the images by default */
.mySlidesGallery2 {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dots-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

/* The dots */
.dotGallery2 {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 5px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active, .dotGallery2:hover {
  background-color: #717171;
}

/* Next & previous buttons */
.sidste, .neste {
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%); /* Centers vertically */
  width: auto;
  padding: 16px;
  color: #AECCE0;
  font-weight: bold;
  font-size: 18px;
  transition: 0.6s ease;
  border-radius: 0 3px 3px 0;
  user-select: none;
}

/* Position the "next button" to the right */
.neste {
  right: 0;
  border-radius: 3px 0 0 3px;
}

.sidste {
  left: 0;
}

/* On hover, add a black background color with a little bit see-through */
.sidste:hover, .neste:hover {
  background-color: rgba(0,0,0,0.8);
}


/* Number text (1/3 etc) */
.numbertext {
  color: #f2f2f2;
  font-size: 12px;
  padding: 8px 12px;
  position: absolute;
  top: 0;
}

/* The dots/bullets/indicators */
.dotGallery2 {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #6A0251;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active, .dotGallery2:hover {
  background-color: #E8236A;
}

/* Fading animation */
.fade {
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}
  </style>



<script is:inline>
    let slideIndexGallery2 = 1;
    showSlidesGallery2(slideIndexGallery2);
  
    function plusSlidesGallery2(n) {
        showSlidesGallery2(slideIndexGallery2 += n);
    }
  
    function currentSlideGallery2(n) {
        showSlidesGallery2(slideIndexGallery2 = n);
    }
  
    function showSlidesGallery2(n) {
      let i;
      let slides = document.getElementsByClassName("mySlidesGallery2");
      let dots = document.getElementsByClassName("dotGallery2");
      if (n > slides.length) {slideIndexGallery2 = 1}
      if (n < 1) {slideIndexGallery2 = slides.length}
      for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
      }
      slides[slideIndexGallery2-1].style.display = "block";
      dots[slideIndexGallery2-1].className += " active";
    }
  </script>