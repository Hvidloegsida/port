<div class="slider-box">
    <div class="container">
      <div class="main-slider">
        
        <!-- Radio buttons for selection -->
        <input checked="checked" id="box1" name="ani" type="radio">
        <input id="box2" name="ani" type="radio">
        <input id="box3" name="ani" type="radio">
        <input id="box4" name="ani" type="radio">
        <input id="box5" name="ani" type="radio">
        <input id="box6" name="ani" type="radio">
        <input id="box7" name="ani" type="radio">

        <!-- Main image slideshow -->
        <div class="slides">
          <img class="slide" src="billed1.png" alt="">
          <img class="slide" src="billed2.png" alt="">
          <img class="slide" src="billed3.jpg" alt="">
          <img class="slide" src="billed4.jpg" alt="">
          <img class="slide" src="billed5.png" alt="">
          <img class="slide" src="billed6.png" alt="">
          <img class="slide" src="billed7.png" alt="">
        </div>

        <!-- Thumbnail row -->
        <div class="thumbnails">
          <label for="box1"><img src="billed1.png" alt=""></label>
          <label for="box2"><img src="billed2.png" alt=""></label>
          <label for="box3"><img src="billed3.jpg" alt=""></label>
          <label for="box4"><img src="billed4.jpg" alt=""></label>
          <label for="box5"><img src="billed5.png" alt=""></label>
          <label for="box6"><img src="billed6.png" alt=""></label>
          <label for="box7"><img src="billed7.png" alt=""></label>
        </div>

      </div>
    </div>
</div>

<style>
  .slider-box {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 20px;
  }

  .main-slider {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 90%;
      max-width: 850px; /* Prevent it from getting too large */
  }

  /* Hide radio buttons */
  .main-slider input {
      display: none;
  }

  /* Main slideshow container */
  .slides {
      position: relative;
      width: 100%;
      aspect-ratio: 3 / 2; /* Keeps images proportional */
  }

  .slide {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: contain;
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
  }

  /* Show the selected image */
  #box1:checked ~ .slides img:nth-child(1),
  #box2:checked ~ .slides img:nth-child(2),
  #box3:checked ~ .slides img:nth-child(3),
  #box4:checked ~ .slides img:nth-child(4),
  #box5:checked ~ .slides img:nth-child(5),
  #box6:checked ~ .slides img:nth-child(6),
  #box7:checked ~ .slides img:nth-child(7) {
      opacity: 1;
  }

  /* Thumbnails container */
  .thumbnails {
      display: flex;
      justify-content: center;
      flex-wrap: wrap; /* Allows thumbnails to wrap on small screens */
      gap: 10px;
      margin-top: 15px;
  }

  .thumbnails label {
      border: 3px solid transparent;
      cursor: pointer;
      opacity: 0.6;
      transition: opacity 0.3s, border-color 0.3s;
  }

  .thumbnails label img {
      display: block;
      width: 80px;
      max-width: 100%;
      height: auto;
  }

  /* Highlight selected thumbnail */
  input:checked + label {
      opacity: 1;
      border-color: #000;
  }

  /* Make thumbnails larger on bigger screens */
  @media (min-width: 768px) {
      .thumbnails label img {
          width: 100px;
      }
  }

  /* Adjust the main slider width for smaller screens */
  @media (max-width: 480px) {
      .main-slider {
          width: 100%;
      }
  }

  #box1:checked ~ .thumbnails label:nth-child(1),
  #box2:checked ~ .thumbnails label:nth-child(2),
  #box3:checked ~ .thumbnails label:nth-child(3),
  #box4:checked ~ .thumbnails label:nth-child(4),
  #box5:checked ~ .thumbnails label:nth-child(5),
  #box6:checked ~ .thumbnails label:nth-child(6),
  #box7:checked ~ .thumbnails label:nth-child(7) {
      opacity: 1;
  }
</style>
