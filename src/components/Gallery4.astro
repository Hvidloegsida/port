---
const {img1, img2, img3, img4, img5, img6, img7} = Astro.props;

---
<div class="slideshow-wrapper4">
  <!-- Slideshow container -->
  <div class="slideshow-container4 gallery4">
      <!-- Full-width images -->
      <div class="mySlidesGallery4 fade4">
        <div class="numbertext4">1 / 7</div>
        <img src={img1}>
      </div>
    
      <div class="mySlidesGallery4 fade4">
        <div class="numbertext4">2 / 7</div>
        <img src={img2}>
      </div>
    
      <div class="mySlidesGallery4 fade4">
        <div class="numbertext4">3 / 7</div>
        <img src={img3}>
      </div>

      <div class="mySlidesGallery4 fade4">
        <div class="numbertext4">4 / 7</div>
        <img src={img4}>
      </div>

      <div class="mySlidesGallery4 fade4">
        <div class="numbertext4">5 / 7</div>
        <img src={img5}>
      </div>

      <div class="mySlidesGallery4 fade4">
        <div class="numbertext4">6 / 7</div>
        <img src={img6}>
      </div>

      <div class="mySlidesGallery4 fade4">
        <div class="numbertext4">7 / 7</div>
        <img src={img7}>
      </div>
    
      <!-- Next and previous buttons -->
      <a class="sidste4" onclick="plusSlidesGallery4(-1)">&#10094;</a>
      <a class="neste4" onclick="plusSlidesGallery4(1)">&#10095;</a>
  </div>

  <!-- The dots/circles -->
  <div class="dots-container4">
    <span class="dotGallery4" onclick="currentSlideGallery4(1)"></span>
    <span class="dotGallery4" onclick="currentSlideGallery4(2)"></span>
    <span class="dotGallery4" onclick="currentSlideGallery4(3)"></span>
    <span class="dotGallery4" onclick="currentSlideGallery4(4)"></span>
    <span class="dotGallery4" onclick="currentSlideGallery4(5)"></span>
    <span class="dotGallery4" onclick="currentSlideGallery4(6)"></span>
    <span class="dotGallery4" onclick="currentSlideGallery4(7)"></span>

  </div>
</div>

  <style>
    * {box-sizing:border-box}

    .slideshow-wrapper4 {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
/* Slideshow container */
.slideshow-container4 {
  position: relative;
  width: 80%;
  max-width: 1000px;
  aspect-ratio: 16 / 9;
  overflow: hidden;
  display: block; /* Ensures correct positioning */
  margin: auto;
}


.mySlidesGallery4 img {
  width: 100%;
  height: 100%;
  object-fit: contain; /* Ensures images fit inside the container */
}

/* Hide the images by default */
.mySlidesGallery4 {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dots-container4 {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

/* The dots */
.dotGallery4 {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 5px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active, .dotGallery4:hover {
  background-color: #717171;
}

/* Next & previous buttons */
.sidste4, .neste4 {
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%); /* Centers vertically */
  width: auto;
  padding: 16px;
  color: #AECCE0;
  font-weight: bold;
  font-size: 18px;
  transition: 0.6s ease;
  border-radius: 0 3px 3px 0;
  user-select: none;
}

/* Position the "next button" to the right */
.neste4 {
  right: 0;
  border-radius: 3px 0 0 3px;
}

.sidste4 {
  left: 0;
}

/* On hover, add a black background color with a little bit see-through */
.sidste4:hover, .neste4:hover {
  background-color: rgba(0,0,0,0.8);
}


/* Number text (1/3 etc) */
.numbertext4 {
  color: #f2f2f2;
  font-size: 12px;
  padding: 8px 12px;
  position: absolute;
  top: 0;
}

/* The dots/bullets/indicators */
.dotGallery4 {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #6A0251;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active, .dotGallery4:hover {
  background-color: #E8236A;
}

/* Fading animation */
.fade4 {
  animation-name: fade3;
  animation-duration: 1.5s;
}

@keyframes fade3 {
  from {opacity: .4}
  to {opacity: 1}
}
  </style>



<script is:inline>
    let slideIndexGallery4 = 1;
    showSlidesGallery4(slideIndexGallery4);
  
    function plusSlidesGallery4(n) {
        showSlidesGallery4(slideIndexGallery4 += n);
    }
  
    function currentSlideGallery4(n) {
        showSlidesGallery4(slideIndexGallery4 = n);
    }
  
    function showSlidesGallery4(n) {
      let i;
      let slides4 = document.getElementsByClassName("mySlidesGallery4");
      let dots4 = document.getElementsByClassName("dotGallery4");
      if (n > slides4.length) {slideIndexGallery4 = 1}
      if (n < 1) {slideIndexGallery4 = slides4.length}
      for (i = 0; i < slides4.length; i++) {
        slides4[i].style.display = "none";
      }
      for (i = 0; i < dots4.length; i++) {
        dots4[i].className = dots4[i].className.replace(" active", "");
      }
      slides4[slideIndexGallery4-1].style.display = "block";
      dots4[slideIndexGallery4-1].className += " active";
    }
  </script>